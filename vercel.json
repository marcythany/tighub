{
	"version": 2,
	"builds": [
		{
			"src": "frontend/package.json",
			"use": "@vercel/static-build"
		},
		{
			"src": "backend/api/index.js",
			"use": "@vercel/node"
		}
	],
	"routes": [
		{
			"src": "/(.*)",
			"dest": "frontend/dist/$1"
		},
		{
			"src": "/api/(.*)",
			"dest": "backend/api/index.js"
		}
	],
	"rewrites": [
		{ "source": "/(.*)", "destination": "/api" },
		{ "source": "/(.*)", "destination": "/" }
	]
}
