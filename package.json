{
  "name": "tighub",
  "version": "1.0.0",
  "description": "GitHub repository explorer and social platform",
  "main": "backend/server.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "scripts": {
    "start": "bun backend/server.js",
    "dev": "bun --watch backend/server.js",
    "dev:frontend": "cd frontend && bun run dev",
    "install": "bun install",
    "build": "bun install && cd frontend && bun run build",
    "test": "bun test"
  },
  "devDependencies": {
    "bun-types": "latest",
    "nodemon": "^3.1.7"
  },
  "dependencies": {
    "axios": "^1.7.8",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "express-session": "^1.18.1",
    "express-validator": "^7.2.0",
    "mongoose": "^8.8.2",
    "passport": "^0.7.0",
    "passport-github2": "^0.1.12"
  }
}
